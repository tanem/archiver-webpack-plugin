{
  "name": "@tanem/archiver-webpack-plugin",
  "version": "3.0.13",
  "description": "A webpack plugin that generates zip archives.",
  "author": "Tane Morgan (https://github.com/tanem)",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=8"
  },
  "homepage": "https://github.com/tanem/archiver-webpack-plugin",
  "bugs": "https://github.com/tanem/archiver-webpack-plugin/issues",
  "repository": "github:tanem/archiver-webpack-plugin",
  "keywords": [
    "archive",
    "archiver",
    "javascript",
    "plugin",
    "webpack",
    "zip"
  ],
  "license": "MIT",
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "devDependencies": {
    "@types/archiver": "3.0.0",
    "@types/glob": "7.1.1",
    "@types/jest": "25.1.2",
    "@types/mini-css-extract-plugin": "0.9.0",
    "@types/rimraf": "2.0.3",
    "@types/tar": "4.0.3",
    "@types/webpack": "4.41.5",
    "@types/webpack-merge": "4.1.5",
    "@types/yauzl": "2.9.1",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "codecov": "3.6.5",
    "css-loader": "3.4.2",
    "del-cli": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "jest": "25.1.0",
    "mini-css-extract-plugin": "0.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "tanem-scripts": "5.0.10",
    "tar": "6.0.1",
    "ts-jest": "25.2.0",
    "typescript": "3.7.5",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-merge": "4.2.2",
    "yauzl": "2.10.0"
  },
  "scripts": {
    "build": "run-s clean compile",
    "check:format": "prettier --list-different \"**/*.{js,ts}\"",
    "check:types": "tsc --noEmit",
    "clean": "run-p clean:*",
    "clean:coverage": "del coverage",
    "clean:dist": "del dist",
    "clean:test": "del test/fixtures/dist",
    "compile": "tsc -p tsconfig.base.json",
    "coverage": "codecov",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint .",
    "release": "tanem-scripts release",
    "test": "run-s check:* lint build test:*",
    "test:cjs": "jest --config ./scripts/jest/config.cjs.js",
    "test:src": "jest --config ./scripts/jest/config.src.js"
  },
  "dependencies": {
    "archiver": "3.1.1",
    "glob": "7.1.6"
  }
}
