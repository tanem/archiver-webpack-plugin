{
  "name": "@tanem/archiver-webpack-plugin",
  "version": "5.0.28",
  "description": "A webpack plugin that generates zip archives.",
  "author": "Tane Morgan (https://github.com/tanem)",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "homepage": "https://github.com/tanem/archiver-webpack-plugin",
  "bugs": "https://github.com/tanem/archiver-webpack-plugin/issues",
  "repository": "github:tanem/archiver-webpack-plugin",
  "keywords": [
    "archive",
    "archiver",
    "javascript",
    "plugin",
    "webpack",
    "zip"
  ],
  "license": "MIT",
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "devDependencies": {
    "@types/archiver": "3.1.1",
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.15",
    "@types/mini-css-extract-plugin": "1.2.0",
    "@types/rimraf": "3.0.0",
    "@types/tar": "4.0.3",
    "@types/webpack": "4.41.23",
    "@types/webpack-merge": "4.1.5",
    "@types/yauzl": "2.9.1",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "css-loader": "5.0.0",
    "del-cli": "3.0.1",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.14.0",
    "jest": "26.6.1",
    "mini-css-extract-plugin": "1.2.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "tanem-scripts": "5.0.44",
    "tar": "6.0.5",
    "ts-jest": "26.4.3",
    "typescript": "4.0.5",
    "webpack": "4.44.2",
    "webpack-cli": "4.1.0",
    "webpack-merge": "5.2.0",
    "yauzl": "2.10.0"
  },
  "scripts": {
    "build": "run-s clean compile",
    "check:format": "prettier --list-different \"**/*.{js,ts}\"",
    "check:types": "tsc --noEmit",
    "clean": "run-p clean:*",
    "clean:coverage": "del coverage",
    "clean:dist": "del dist",
    "clean:test": "del test/fixtures/dist",
    "compile": "tsc -p tsconfig.base.json",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "lint": "eslint .",
    "release": "tanem-scripts release",
    "test": "run-s check:* lint build test:*",
    "test:cjs": "jest --config ./scripts/jest/config.cjs.js",
    "test:src": "jest --config ./scripts/jest/config.src.js"
  },
  "dependencies": {
    "archiver": "5.0.2",
    "glob": "7.1.6"
  }
}
